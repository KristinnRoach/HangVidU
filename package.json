{
  "name": "hangvidu",
  "private": true,
  "version": "0.0.0",
  "description": "P2P video chat with watch-together mode",
  "type": "module",
  "scripts": {
    "dev": "pnpm kill:silent && concurrently \"vite\" \"pnpm ngrok\" \"sh scripts/show-ngrok-url.sh\"",
    "kill": "fkill :5173 :4040 --force",
    "kill:silent": "fkill :5173 :4040 --force --silent",
    "ngrok": "ngrok http https://localhost:5173 ${NGROK_DOMAIN:+--domain=$NGROK_DOMAIN}",
    "dev:experiments": "DISABLE_PWA=1 vite --open experiments.html",
    "build": "vite build",
    "build:hosting": "BUILD_TARGET=hosting vite build",
    "deploy:fb": "pnpm build:hosting && firebase deploy --only hosting",
    "deploy:fb:db": "firebase deploy --only database",
    "deploy:fb:functions": "firebase deploy --only functions",
    "deploy:fb:full": "pnpm build:hosting && firebase deploy",
    "check:deployment": "curl -s -o /dev/null -w '%{http_code}' -X POST https://europe-west1-vidu-aae11.cloudfunctions.net/sendCallNotification | grep -E '400|401|405' -q && echo '✅ Cloud Function is ready' || echo '❌ Cloud Function not ready'",
    "deploy:gh": "pnpm build && npx gh-pages -d dist",
    "deploy:all": "pnpm test:compat && pnpm deploy:fb && pnpm deploy:gh",
    "deploy:skip-tests": "pnpm deploy:fb && pnpm deploy:gh",
    "preview": "vite preview",
    "preview:https": "PREVIEW_HTTPS=1 vite preview",
    "test:pwa": "pnpm build:hosting && pnpm preview:https",
    "build:go": "sh go-server/build-scripts/build.sh",
    "test": "vitest --run",
    "test:all": "pnpm test:compat && pnpm test:e2e",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:compat": "COMPAT=true vitest --run",
    "test:create-component": "vitest --run src/utils/dom/**/*.test.js",
    "test:smoke": "vitest --run tests/smoke/ src/**/*.test.js",
    "test:unit": "vitest --run tests/unit/ src/**/*.test.js",
    "test:integration": "vitest --run tests/integration/ src/**/*.test.js",
    "test:file-transfer": "node tests/integration/run-file-transfer.js",
    "test:file-transfer:full": "node tests/integration/run-file-transfer.js --sizes 100,250,500,750,900,1024",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristinnroach/hangvidu"
  },
  "keywords": [
    "webrtc",
    "video-chat",
    "peer-to-peer",
    "watch-together",
    "youtube"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "fast-check": "^4.5.3",
    "fkill-cli": "~9.0.0",
    "playwright": "^1.58.1",
    "vite": "^7.3.1",
    "vite-plugin-mkcert": "^1.17.9",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "workbox-build": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0"
  },
  "dependencies": {
    "@sentry/browser": "^10.39.0",
    "dexie": "^4.3.0",
    "firebase": "^12.9.0",
    "lucide": "^0.575.0",
    "workbox-window": "^7.4.0",
    "zod": "^4.3.6"
  }
}
