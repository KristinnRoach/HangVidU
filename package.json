{
  "name": "hangvidu",
  "private": true,
  "version": "0.0.0",
  "description": "Simple peer-to-peer video chat with watch-together mode",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:experiments": "vite --open experiments.html",
    "dev:disable-pwa": "DISABLE_PWA=1 vite",
    "build": "vite build",
    "gh-deploy": "pnpm build && npx gh-pages -d dist",
    "preview": "vite preview",
    "build:go": "sh go-server/build-scripts/build.sh",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:browser:smoke": "vitest --run tests/browser/",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristinnroach/hangvidu"
  },
  "keywords": [
    "webrtc",
    "video-chat",
    "peer-to-peer",
    "watch-together",
    "youtube"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "jsdom": "^27.0.1",
    "vite": "^7.1.12",
    "vite-plugin-mkcert": "^1.17.9",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "dexie": "^4.2.1",
    "firebase": "^12.4.0",
    "lit": "^3.3.1"
  }
}
