{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true
      }
    },
    "users": {
      "$userId": {
        "contacts": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        },
        "callHistory": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        },
        "recentCalls": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        },
        "outgoingCall": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        },
        "presence": {
          ".read": true,
          ".write": "$userId === auth.uid"
        }
      }
    }
  }
}
